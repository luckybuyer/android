<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/halopay_color_1"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/image_tip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
	
    <TextView
        android:id="@+id/tv_tip"
        android:layout_marginLeft="@dimen/haolopay_margin_19"
        android:layout_marginRight="@dimen/haolopay_margin_19"
        android:layout_marginTop="@dimen/haolopay_margin_20"
        android:layout_marginBottom="@dimen/haolopay_margin_20"
        android:lineSpacingExtra="@dimen/haolopay_margin_7"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:textColor="@color/halopay_color_5"
        android:textSize="13sp" 
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    
</LinearLayout>