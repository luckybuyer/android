<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_bar"
        layout="@layout/halopay_ui_title_bar_activity" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/halopay_color_1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/haolopay_margin_20"
            android:orientation="vertical" >

            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/halopay_color_8_1"
                android:orientation="vertical">
                
                <TextView 
                    android:id="@+id/sms_pay_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/haolopay_margin_15"
                    android:layout_marginRight="@dimen/haolopay_margin_15"
                    android:layout_marginTop="@dimen/haolopay_margin_20"
                    android:layout_marginBottom="@dimen/haolopay_margin_10"
                    android:text="您需要发送如下短信纸10086以完成交易"
                    android:textColor="@color/halopay_color_4"
                    android:textSize="@dimen/haolopay_text_size_14"/>
                
                <TextView
                    android:id="@+id/sms_pay_sms_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/haolopay_margin_15"
                    android:layout_marginRight="@dimen/haolopay_margin_15"
                    android:background="@drawable/halopay_ll_bg"
                    android:gravity="center"
                    android:paddingBottom="@dimen/haolopay_margin_10"
                    android:paddingTop="@dimen/haolopay_margin_10"
                    android:text="1243284493"
                    android:textColor="@color/halopay_color_6"
                    android:textSize="@dimen/haolopay_text_size_14" />
                
                 <TextView
                     android:id="@+id/sms_pay_copy_content"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="right"
                     android:paddingLeft="@dimen/haolopay_margin_15"
                     android:paddingRight="@dimen/haolopay_margin_15"
                     android:paddingTop="@dimen/haolopay_margin_10"
                     android:paddingBottom="@dimen/haolopay_margin_15"
                     android:text="复制短信内容"
                     android:textSize="@dimen/haolopay_text_size_12"
                     android:textColor="@color/halopay_color_7_5" />

            </LinearLayout>
            
            <TextView
                android:id="@+id/sms_pay_query_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/haolopay_margin_15"
                android:layout_marginRight="@dimen/haolopay_margin_15"
                android:layout_marginTop="@dimen/haolopay_margin_30"
                android:layout_marginBottom="@dimen/haolopay_margin_10"
                android:text="如果您已经完成短信发送，请点击继续"
                android:textColor="@color/halopay_color_4"
                android:gravity="center"
                android:textSize="@dimen/haolopay_text_size_14" />
            
             <Button
                 android:id="@+id/sms_pay_query_button"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/halopay_height_48"
                 android:layout_marginLeft="@dimen/haolopay_margin_15"
                 android:layout_marginRight="@dimen/haolopay_margin_15"
                 android:background="@drawable/halopay_common_btn_bg_color"
                 android:text="continue"
                 android:textColor="@drawable/halopay_common_btn_text_color"
                 android:textSize="@dimen/haolopay_text_size_16" />
           
        </LinearLayout>
    </ScrollView>

</LinearLayout>