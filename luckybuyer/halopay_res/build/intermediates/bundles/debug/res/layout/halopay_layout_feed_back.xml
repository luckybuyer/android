<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_bar"
        layout="@layout/halopay_ui_title_bar_activity" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/halopay_color_1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/haolopay_margin_20"
            android:paddingLeft="@dimen/haolopay_margin_20"
            android:paddingRight="@dimen/haolopay_margin_20"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/feedBack_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/haolopay_margin_20"
                android:layout_marginBottom="@dimen/haolopay_margin_10"
                android:textColor="@color/halopay_color_6"
                android:textSize="@dimen/haolopay_text_size_16" />
            <EditText
                android:id="@+id/feedBack_content_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="108dp"
                android:padding="@dimen/haolopay_margin_10"
                android:maxEms="1024"
                android:gravity="top"
                android:textColorHint="@color/halopay_color_4"
                android:background="@drawable/halopay_ll_bg"
                android:textColor="@color/halopay_color_6"
                android:textSize="@dimen/haolopay_text_size_14" />

            <TextView
                android:id="@+id/feedBack_email_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/haolopay_margin_10"
                android:layout_marginTop="@dimen/haolopay_margin_20"
                android:textColor="@color/halopay_color_6"
                android:textSize="@dimen/haolopay_text_size_16" />
            <EditText
                android:id="@+id/feedBack_email_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:gravity="center_vertical"
                android:maxEms="120"
                android:singleLine="true"
                android:padding="@dimen/haolopay_margin_5"
                android:background="@drawable/halopay_ll_bg"
                android:textColor="@color/halopay_color_6"
                android:textSize="@dimen/haolopay_text_size_14" />

            <TextView 
                android:id="@+id/feedBack_email_hint_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/halopay_color_4"
                android:textSize="@dimen/haolopay_text_size_14"/>
            
            <Button
                android:id="@+id/feedBack_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/halopay_height_48"
                android:layout_marginTop="@dimen/haolopay_margin_20"
                android:layout_marginBottom="@dimen/haolopay_margin_20"
                android:background="@drawable/halopay_common_btn_bg_color"
                android:textColor="@drawable/halopay_common_btn_text_color"
                android:textSize="@dimen/haolopay_text_size_16"
                android:text="Submit" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>