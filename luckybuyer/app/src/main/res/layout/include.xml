<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    tools:context="com.example.circleimageviewdemo_1.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_10"
        android:background="#eeeeee" />

    <ImageView
        android:layout_width="@dimen/dimen_26"
        android:layout_height="@dimen/dimen_24"
        android:layout_marginLeft="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_36"
        android:background="@drawable/me_lucky" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginLeft="@dimen/dimen_60"
        android:layout_marginTop="@dimen/dimen_30"
        android:gravity="center"
        android:text="Winners"
        android:textColor="#ff9c05"
        android:textSize="@dimen/dimen_26" />

    <TextView
        android:id="@+id/tv_productdetail_luckynum"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_40"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_30"
        android:gravity="center"
        android:text="0965389"
        android:textColor="#ff9c05"
        android:textSize="@dimen/dimen_26" />
    <TextView
        android:id="@+id/tv_luckynum"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginTop="@dimen/dimen_30"
        android:layout_toLeftOf="@+id/tv_productdetail_luckynum"
        android:gravity="center"
        android:text="Smart Number:"
        android:textColor="#ff9c05"
        android:textSize="@dimen/dimen_26" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dimen_100"
        android:background="@color/bg_view"></View>

    <net.iwantbuyer.view.RoundCornerImageView
        android:id="@+id/civ_productdetail_lucky"
        android:layout_width="@dimen/dimen_65"
        android:layout_height="@dimen/dimen_65"
        android:layout_marginLeft="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_130"
        android:src="@drawable/default_icon" />

    <TextView
        android:id="@+id/tv_productdetail_typesomething"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_36"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_130"
        android:layout_toRightOf="@+id/civ_productdetail_lucky"
        android:text="Type something"
        android:textColor="#666666"
        android:textSize="@dimen/dimen_27" />

    <TextView
        android:id="@+id/tv_luckyid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_productdetail_typesomething"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_toRightOf="@id/civ_productdetail_lucky"
        android:text="User ID: "
        android:textColor="#999999"
        android:textSize="@dimen/dimen_24" />
    <TextView
        android:id="@+id/tv_productdetail_luckyid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_productdetail_typesomething"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_toRightOf="@id/tv_luckyid"
        android:text="109653049"
        android:textColor="#999999"
        android:textSize="@dimen/dimen_24" />

    <TextView
        android:id="@+id/tv_luckytime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_productdetail_luckyid"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_toRightOf="@id/civ_productdetail_lucky"
        android:text="Lottery time: "
        android:textColor="#999999"
        android:textSize="@dimen/dimen_24" />
    <TextView
        android:id="@+id/tv_productdetail_luckytime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_productdetail_luckyid"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_toRightOf="@id/tv_luckytime"
        android:text="2016-08-02  12:45"
        android:textColor="#999999"
        android:textSize="@dimen/dimen_24" />


    <TextView
        android:id="@+id/tv_luckymany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_productdetail_luckytime"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_toRightOf="@id/civ_productdetail_lucky"
        android:text="Number of participants: "
        android:textColor="#999999"
        android:textSize="@dimen/dimen_24" />
    <TextView
        android:id="@+id/tv_productdetail_luckymany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_productdetail_luckytime"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_toRightOf="@id/tv_luckymany"
        android:text="40"
        android:textColor="#999999"
        android:textSize="@dimen/dimen_24" />

    <RelativeLayout
        android:id="@+id/rl_productdetail_participation_lucky"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_productdetail_luckymany"
        android:layout_marginRight="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_4"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_productdetail_luckygo"
            android:layout_width="@dimen/dimen_12"
            android:layout_height="@dimen/dimen_22"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dimen_4"
            android:background="@drawable/go_go" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_toLeftOf="@+id/iv_productdetail_luckygo"
            android:text="Participation details"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_24" />
    </RelativeLayout>




    <View
        android:id="@+id/view_lucky"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rl_productdetail_participation_lucky"
        android:layout_marginTop="@dimen/dimen_30"
        android:background="@color/bg_view"></View>
</RelativeLayout>