<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.iwantbuyer.activity.WelcomeActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/welcome_pager" />



    <RelativeLayout
        android:id="@+id/rl_welcome_pb"
        android:layout_width="@dimen/dimen_250"
        android:layout_centerInParent="true"
        android:layout_height="@dimen/dimen_150">

        <ProgressBar
            android:indeterminateDrawable="@drawable/shape_welcome_loading"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/dimen_100"
            android:layout_height="@dimen/dimen_100" />
    </RelativeLayout>

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/fl_welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</RelativeLayout>
