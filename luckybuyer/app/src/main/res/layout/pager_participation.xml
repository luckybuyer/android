<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_paricipation_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_39"
        android:background="@color/bg_while">

        <TextView
            android:id="@+id/tv_participation_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_30"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_8"
            android:layout_marginTop="@dimen/dimen_1"
            android:gravity="center"
            android:text="Participation details"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_17" />


        <ImageView
            android:id="@+id/iv_participation_back"
            android:layout_width="@dimen/dimen_11"
            android:layout_height="@dimen/dimen_20"
            android:layout_marginBottom="@dimen/dimen_12"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_6"
            android:background="@drawable/go_back" />

        <TextView
            android:id="@+id/tv_participation_back"
            android:layout_width="@dimen/dimen_39"
            android:layout_height="@dimen/dimen_20"
            android:layout_alignTop="@id/iv_participation_back"
            android:layout_marginLeft="@dimen/dimen_2"
            android:layout_toRightOf="@+id/iv_participation_back"
            android:gravity="center"
            android:text="Back"
            android:layout_marginBottom="@dimen/dimen_12"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_13" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:layout_alignParentBottom="true"
            android:background="@color/bg_view"></View>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_paricipation_header"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/rl_participation_icon"
            android:layout_width="@dimen/dimen_68"
            android:layout_height="@dimen/dimen_68"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_18"
            android:background="@drawable/shape_black_border">

            <ImageView
                android:id="@+id/iv_participation_icon"
                android:layout_width="@dimen/dimen_65"
                android:layout_height="@dimen/dimen_65"
                android:layout_centerInParent="true"
                android:background="@drawable/default_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_participation_discribe"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_35"
            android:layout_alignTop="@+id/rl_participation_icon"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_12"
            android:layout_toRightOf="@+id/rl_participation_icon"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Magic sound headphones second generation"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_13" />

        <TextView
            android:id="@+id/tv_participation_period"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_18"
            android:layout_below="@+id/tv_participation_discribe"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_toRightOf="@+id/rl_participation_icon"
            android:text="Participation period:"
            android:textColor="#999999"
            android:textSize="@dimen/dimen_13" />

        <View
            android:id="@+id/view_participation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:layout_below="@+id/rl_participation_icon"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginRight="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_18"
            android:background="@color/bg_view"></View>

        <LinearLayout
            android:id="@+id/ll_participation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30"
            android:layout_below="@+id/view_participation"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginRight="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_13"
            android:background="#f2f2f4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Time"
                android:textColor="#666666"
                android:textSize="@dimen/dimen_12" />

            <View
                android:layout_width="@dimen/dimen_1"
                android:layout_height="match_parent"
                android:background="@color/bg_view"></View>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="People"
                android:textColor="#666666"
                android:textSize="@dimen/dimen_12" />

            <View
                android:layout_width="@dimen/dimen_1"
                android:layout_height="match_parent"
                android:background="@color/bg_view"></View>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Participation numbers"
                android:textColor="#666666"
                android:textSize="@dimen/dimen_12" />
        </LinearLayout>

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/dimen_1"-->
            <!--android:layout_below="@+id/ll_participation"-->
            <!--android:layout_marginLeft="@dimen/dimen_12"-->
            <!--android:layout_marginRight="@dimen/dimen_12"-->
            <!--android:background="@color/bg_view"></View>-->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_participation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_participation"
            android:layout_marginBottom="@dimen/dimen_15"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginRight="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_1" />
    </RelativeLayout>

</RelativeLayout>