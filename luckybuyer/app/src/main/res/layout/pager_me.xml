<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_me_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_193"
        android:background="#E9E6E8">

        <net.luckybuyer.view.CircleImageView
            android:layout_width="@dimen/dimen_64"
            android:layout_height="@dimen/dimen_64"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_40"
            android:background="@drawable/civ_shape" />

        <net.luckybuyer.view.CircleImageView
            android:id="@+id/civ_me_header"
            android:layout_width="@dimen/dimen_60"
            android:layout_height="@dimen/dimen_60"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_42"
            android:src="@drawable/mainavtivity_gift" />

        <ImageView
            android:id="@+id/iv_me_voice"
            android:layout_width="@dimen/dimen_31"
            android:layout_height="@dimen/dimen_31"
            android:layout_marginRight="@dimen/dimen_55"
            android:layout_marginTop="@dimen/dimen_55"
            android:layout_toLeftOf="@+id/civ_me_header"
            android:background="@drawable/me_voice" />

        <ImageView
            android:id="@+id/i_me_set"
            android:layout_width="@dimen/dimen_31"
            android:layout_height="@dimen/dimen_31"
            android:layout_marginLeft="@dimen/dimen_55"
            android:layout_marginTop="@dimen/dimen_55"
            android:layout_toRightOf="@+id/civ_me_header"
            android:background="@drawable/me_set" />

        <TextView
            android:id="@+id/tv_me_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_20"
            android:layout_below="@+id/civ_me_header"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_10"
            android:text="PILItong"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_15" />

        <TextView
            android:id="@+id/tv_me_fbcode"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_16"
            android:layout_below="@+id/civ_me_header"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_30"
            android:text="（887338）"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/dimen_11" />

        <TextView
            android:id="@+id/tv_me_gold"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_18"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_20"
            android:text="Gold:$998"
            android:textColor="#ff9c05"
            android:textSize="@dimen/dimen_13" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:background="#ffffff">

        <LinearLayout
            android:id="@+id/ll_me_vpcontrol"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_me_all"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dimen_31"
                android:paddingRight="@dimen/dimen_31"
                android:enabled="false"
                android:gravity="center"
                android:text="All"
                android:textColor="@drawable/selecotr_tv_me_textcolor"
                android:textSize="@dimen/dimen_13" />

            <TextView
                android:id="@+id/tv_me_lucky"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_me_all"
                android:gravity="center"
                android:text="Lucky Records"
                android:textColor="@drawable/selecotr_tv_me_textcolor"
                android:textSize="@dimen/dimen_13" />

            <TextView
                android:id="@+id/tv_me_show"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dimen_31"
                android:paddingRight="@dimen/dimen_31"
                android:layout_toRightOf="@id/tv_me_lucky"
                android:gravity="center"
                android:text="Show"
                android:textColor="@drawable/selecotr_tv_me_textcolor"
                android:textSize="@dimen/dimen_13" />

            <TextView
                android:id="@+id/tv_me_history"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Hisory"
                android:textColor="@drawable/selecotr_tv_me_textcolor"
                android:textSize="@dimen/dimen_13" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_me_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_48">

            <ImageView
                android:id="@+id/iv_me_line"
                android:layout_width="@dimen/dimen_63"
                android:layout_height="@dimen/dimen_2"
                android:layout_marginLeft="@dimen/dimen_12"
                android:background="@drawable/me_underline"></ImageView>
        </RelativeLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_me"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"></android.support.v4.view.ViewPager>
</LinearLayout>