<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_while"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_coindetail_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_39"
        android:background="@color/bg_while">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="@dimen/dimen_113"
            android:layout_height="@dimen/dimen_30"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_9"
            android:layout_marginTop="@dimen/dimen_1"
            android:gravity="center"
            android:text="Coin Details"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_20" />

        <TextView
            android:id="@+id/tv_second_share"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_20"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_12"
            android:layout_marginRight="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_7"
            android:gravity="center"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_14" />

        <ImageView
            android:id="@+id/iv_coindetail_back"
            android:layout_width="@dimen/dimen_10"
            android:layout_height="@dimen/dimen_18"
            android:layout_marginBottom="@dimen/dimen_12"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_8"
            android:background="@drawable/go_back" />

        <TextView
            android:id="@+id/tv_coindetail_back"
            android:layout_width="@dimen/dimen_39"
            android:layout_height="@dimen/dimen_16"
            android:layout_marginLeft="@dimen/dimen_6"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_toRightOf="@+id/iv_coindetail_back"
            android:text="Back"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_14" />

    </RelativeLayout>

    <ScrollView
        android:layout_below="@id/rl_coindetail_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_coindetail_balance"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dimen_25"
                android:textSize="@dimen/dimen_24"
                android:textColor="@color/text_black"
                android:text="$999"
                android:layout_centerHorizontal="true"
                android:layout_height="@dimen/dimen_34" />

            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/dimen_12"
                android:textColor="#999999"
                android:text="Coins Balance"
                android:layout_below="@+id/tv_coindetail_balance"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_coindetail_buycoins"
                android:layout_below="@+id/tv_coindetail_balance"
                android:textColor="#ffffff"
                android:background="#ff311a"
                android:textSize="@dimen/dimen_13"
                android:text="Buy coins"
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen_36"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/dimen_80"
                android:layout_height="@dimen/dimen_22" />

            <View
                android:id="@+id/view_coindetails"
                android:layout_width="match_parent"
                android:background="@color/bg_view"
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_below="@+id/tv_coindetail_buycoins"
                android:layout_height="@dimen/dimen_1"></View>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_coindetail"
                android:layout_width="match_parent"
                android:layout_below="@+id/view_coindetails"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>