<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/dimen_600"
        android:layout_height="@dimen/dimen_720"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_20"
        android:background="@drawable/home_gift_use" />
    <ImageView
        android:layout_width="@dimen/dimen_728"
        android:background="@drawable/home_gift_coins"
        android:layout_height="@dimen/dimen_704" />

    <ImageView
        android:id="@+id/iv_home_coin"
        android:layout_width="@dimen/dimen_48"
        android:layout_height="@dimen/dimen_82"
        android:layout_marginLeft="@dimen/dimen_200"
        android:layout_marginTop="@dimen/dimen_250"
        android:background="@drawable/home_gift_two" />

    <ImageView
        android:id="@+id/iv_home_use"
        android:layout_width="@dimen/dimen_360"
        android:layout_height="@dimen/dimen_80"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_700"
        android:background="@drawable/home_gift_usecoin" />

    <ImageView
        android:id="@+id/iv_gift__use_close"
        android:background="@drawable/guide_close"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_width="@dimen/dimen_52"
        android:layout_height="@dimen/dimen_52" />

</RelativeLayout>