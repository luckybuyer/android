<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.luckybuyer.activity.SecondPagerActivity">

    <RelativeLayout
        android:id="@+id/rl_secondpager_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_39"
        android:background="@color/bg_while">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="@dimen/dimen_113"
            android:layout_height="@dimen/dimen_30"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_9"
            android:layout_marginTop="@dimen/dimen_1"
            android:gravity="center"
            android:text="Item Details"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_20" />

        <TextView
            android:id="@+id/tv_second_share"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_20"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_12"
            android:layout_marginRight="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_7"
            android:gravity="center"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_14" />

        <ImageView
            android:id="@+id/iv_second"
            android:layout_width="@dimen/dimen_10"
            android:layout_height="@dimen/dimen_18"
            android:layout_marginBottom="@dimen/dimen_12"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_8"
            android:background="@drawable/go_back" />

        <TextView
            android:id="@+id/tv_second_back"
            android:layout_width="@dimen/dimen_39"
            android:layout_height="@dimen/dimen_16"
            android:layout_marginLeft="@dimen/dimen_6"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_toRightOf="@+id/iv_second"
            android:text="Back"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_14" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/fl_secondpager"
        android:background="@color/bg_view"></View>

    <FrameLayout
        android:id="@+id/fl_secondpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_secondpager_header"></FrameLayout>
</RelativeLayout>
