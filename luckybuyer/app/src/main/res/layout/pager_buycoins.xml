<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_while">
    <RelativeLayout
        android:id="@+id/rl_buycoins_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_78"
        android:background="@color/bg_while">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="@dimen/dimen_220"
            android:layout_height="@dimen/dimen_60"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_18"
            android:layout_marginTop="@dimen/dimen_2"
            android:gravity="center"
            android:text="Buy Coins"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_36" />

        <TextView
            android:id="@+id/tv_second_share"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_40"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_24"
            android:layout_marginRight="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_14"
            android:gravity="center"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_28" />

        <ImageView
            android:id="@+id/iv_buycoins_back"
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_36"
            android:layout_marginBottom="@dimen/dimen_24"
            android:layout_marginLeft="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_16"
            android:background="@drawable/go_back" />

        <TextView
            android:id="@+id/tv_buycoins_back"
            android:layout_width="@dimen/dimen_78"
            android:layout_height="@dimen/dimen_32"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_toRightOf="@+id/iv_buycoins_back"
            android:text="Back"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_28" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/bg_view"></View>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/rl_buycoins_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_buycoins_balance"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginLeft="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_26"
            android:text="Coins balance:10"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_32" />

        <ImageView
            android:background="@drawable/default_coin"
            android:layout_width="@dimen/dimen_28"
            android:layout_toRightOf="@id/tv_buycoins_balance"
            android:layout_marginLeft="@dimen/dimen_6"
            android:layout_marginTop="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_28" />
        <TextView
            android:id="@+id/tv_buycoins_rate"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_40"
            android:layout_below="@+id/tv_buycoins_balance"
            android:layout_marginLeft="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_18"
            android:text="1 Coins = 1 USD â‰ˆ 3.6726 AED"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_32" />

        <View
            android:id="@+id/view_buyconis"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:layout_below="@+id/tv_buycoins_rate"
            android:layout_marginLeft="@dimen/dimen_24"
            android:layout_marginRight="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_26"
            android:background="@color/bg_view"></View>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_buycoins"
            android:layout_width="match_parent"
            android:layout_below="@+id/view_buyconis"
            android:layout_marginLeft="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_26"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/ll_buycoins_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rv_buycoins"
            android:background="#F2F2F4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_100"
                android:layout_marginLeft="@dimen/dimen_24"
                android:layout_marginRight="@dimen/dimen_24"
                android:gravity="center_vertical"
                android:text="Payment method"
                android:textColor="#999999"
                android:textSize="@dimen/dimen_26" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_buycoins_paypal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100"
            android:layout_below="@+id/ll_buycoins_method">

            <ImageView
                android:layout_width="@dimen/dimen_160"
                android:layout_height="@dimen/dimen_36"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_24"
                android:background="@drawable/buycoins_paypal" />

            <ImageView
                android:id="@+id/iv_buycoins_paypal"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_24"
                android:background="@drawable/selector_rl_buycoins_payment_method" />
            <View
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:background="#e5e5e5"
                android:layout_marginLeft="@dimen/dimen_24"
                android:layout_marginRight="@dimen/dimen_24"
                android:layout_height="1px"></View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_buycoins_cashu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100"
            android:layout_below="@+id/rl_buycoins_paypal">

            <ImageView
                android:layout_width="@dimen/dimen_160"
                android:layout_height="@dimen/dimen_36"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_24"
                android:background="@drawable/buycoins_cashu" />

            <ImageView
                android:id="@+id/iv_buycoins_cashu"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_24"
                android:background="@drawable/selector_rl_buycoins_payment_method" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_buycoins_cashu"
            android:background="#F2F2F4"></RelativeLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_108"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_buycoins_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_24"
            android:text="1coin"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_30" />

        <TextView
            android:id="@+id/tv_buycoins_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#ff0000"
            android:gravity="center"
            android:text="Buy coins"
            android:textColor="@color/bg_while"
            android:textSize="@dimen/dimen_30" />
    </LinearLayout>

    <WebView
        android:layout_below="@+id/rl_buycoins_header"
        android:visibility="gone"
        android:id="@+id/wv_payssion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></WebView>
</RelativeLayout>