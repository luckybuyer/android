<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_while">
    <RelativeLayout
        android:id="@+id/rl_buycoins_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_39"
        android:background="@color/bg_while">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="@dimen/dimen_113"
            android:layout_height="@dimen/dimen_30"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_9"
            android:layout_marginTop="@dimen/dimen_1"
            android:gravity="center"
            android:text="Buy Coins"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_20" />

        <TextView
            android:id="@+id/tv_second_share"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_20"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_12"
            android:layout_marginRight="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_7"
            android:gravity="center"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_14" />

        <ImageView
            android:id="@+id/iv_buycoins_back"
            android:layout_width="@dimen/dimen_10"
            android:layout_height="@dimen/dimen_18"
            android:layout_marginBottom="@dimen/dimen_12"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_8"
            android:background="@drawable/go_back" />

        <TextView
            android:id="@+id/tv_buycoins_back"
            android:layout_width="@dimen/dimen_39"
            android:layout_height="@dimen/dimen_16"
            android:layout_marginLeft="@dimen/dimen_6"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_toRightOf="@+id/iv_buycoins_back"
            android:text="Back"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/bg_view"></View>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/rl_buycoins_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_buycoins_balance"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_20"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_13"
            android:text="Coins balance:10"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_15" />

        <TextView
            android:id="@+id/tv_buycoins_rate"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_20"
            android:layout_below="@+id/tv_buycoins_balance"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_9"
            android:text="Notes:1$＝3.6726AED"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_15" />

        <net.luckybuyer.view.JustifyTextView
            android:gravity="center_vertical"
            android:id="@+id/jtv_buycoins_ratediscribe"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_33"
            android:layout_below="@+id/tv_buycoins_rate"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginRight="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_8"
            android:text="Exchange rate qre for reference only, payment subject to the rate on the day"
            android:textSize="@dimen/dimen_12" />

        <View
            android:id="@+id/view_buyconis"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/jtv_buycoins_ratediscribe"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginRight="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_13"
            android:background="@color/bg_view"></View>

        <LinearLayout
            android:id="@+id/ll_buycoins_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_below="@+id/view_buyconis"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginRight="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_13">

            <TextView
                android:id="@+id/tv_buyconis_1coins"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dimen_6"
                android:layout_weight="1"
                android:background="@drawable/selector_tv_buyconis_1coins"
                android:gravity="center"
                android:text="1coin＝1$"
                android:textColor="@drawable/selector_textcolor_tv_buyconis_coins"
                android:textSize="@dimen/dimen_13" />

            <TextView
                android:id="@+id/tv_buyconis_5coins"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_6"
                android:layout_weight="1"
                android:background="@drawable/selector_tv_buyconis_1coins"
                android:textColor="@drawable/selector_textcolor_tv_buyconis_coins"
                android:gravity="center"
                android:text="5coin＝5$"
                android:textSize="@dimen/dimen_13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_buycoins_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_below="@+id/ll_buycoins_1"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginRight="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_9">

            <TextView
                android:id="@+id/tv_buyconis_10coins"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dimen_6"
                android:layout_weight="1"
                android:background="@drawable/selector_tv_buyconis_1coins"
                android:textColor="@drawable/selector_textcolor_tv_buyconis_coins"
                android:gravity="center"
                android:text="10coin＝10$"
                android:textSize="@dimen/dimen_13" />

            <TextView
                android:id="@+id/tv_buyconis_30coins"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_6"
                android:layout_weight="1"
                android:background="@drawable/selector_tv_buyconis_1coins"
                android:textColor="@drawable/selector_textcolor_tv_buyconis_coins"
                android:gravity="center"
                android:text="30coin＝30$"
                android:textSize="@dimen/dimen_13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_buycoins_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_below="@+id/ll_buycoins_2"
            android:layout_marginBottom="@dimen/dimen_12"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginRight="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_9">

            <TextView
                android:id="@+id/tv_buyconis_50coins"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dimen_6"
                android:layout_weight="1"
                android:background="@drawable/selector_tv_buyconis_1coins"
                android:textColor="@drawable/selector_textcolor_tv_buyconis_coins"
                android:gravity="center"
                android:text="50coin＝50$"
                android:textSize="@dimen/dimen_13" />

            <TextView
                android:id="@+id/tv_buyconis_100coins"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_6"
                android:layout_weight="1"
                android:background="@drawable/selector_tv_buyconis_1coins"
                android:textColor="@drawable/selector_textcolor_tv_buyconis_coins"
                android:gravity="center"
                android:text="100coin＝100$"
                android:textSize="@dimen/dimen_13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_buycoins_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_buycoins_3"
            android:background="#F2F2F4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_39"
                android:layout_marginLeft="@dimen/dimen_12"
                android:layout_marginRight="@dimen/dimen_12"
                android:gravity="center_vertical"
                android:text="Payment method"
                android:textColor="#999999"
                android:textSize="@dimen/dimen_12" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_buycoins_paypal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_below="@+id/ll_buycoins_method">

            <ImageView
                android:layout_width="@dimen/dimen_80"
                android:layout_height="@dimen/dimen_18"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_12"
                android:background="@drawable/buycoins_paypal" />

            <ImageView
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_12"
                android:background="@drawable/buycoins_sure" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_115"
            android:layout_below="@+id/rl_buycoins_paypal"
            android:background="#F2F2F4"></RelativeLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_54"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_buycoins_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_12"
            android:text="1coin"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_15" />

        <TextView
            android:id="@+id/tv_buycoins_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#ddff4f3c"
            android:gravity="center"
            android:text="Buy coins"
            android:textColor="@color/bg_while"
            android:textSize="@dimen/dimen_15" />
    </LinearLayout>
</RelativeLayout>