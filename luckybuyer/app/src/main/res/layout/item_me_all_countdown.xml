<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_10"
        android:background="#E5E5E5">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_all"
            android:layout_width="@dimen/dimen_160"
            android:layout_height="@dimen/dimen_160"
            android:layout_marginLeft="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_50"
            android:background="@drawable/shape_rl_all"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_countdown_icon"
                android:layout_width="@dimen/dimen_130"
                android:layout_height="@dimen/dimen_130"
                android:background="@drawable/default_icon" />
        </RelativeLayout>

        <net.luckybuyer.view.JustifyTextView
            android:id="@+id/jtv_countdown_discribe"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_72"
            android:layout_marginLeft="@dimen/dimen_30"
            android:layout_marginRight="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_54"
            android:layout_toRightOf="@id/rl_all"
            android:ellipsize="end"
            android:maxEms="10"
            android:maxLines="2"
            android:text="Magic sound headphones second"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_28" />

        <TextView
            android:id="@+id/tv_countdown_issue"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_38"
            android:layout_below="@id/jtv_countdown_discribe"
            android:layout_marginLeft="@dimen/dimen_30"
            android:layout_toRightOf="@+id/rl_all"
            android:text="Issueï¼š171754"
            android:textColor="#666666"
            android:textSize="@dimen/dimen_28" />

        <TextView
            android:id="@+id/tv_countdown_participation"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_38"
            android:layout_below="@id/tv_countdown_issue"
            android:layout_marginLeft="@dimen/dimen_30"
            android:layout_toRightOf="@+id/rl_all"
            android:text="My participation: 1"
            android:textColor="#666666"
            android:textSize="@dimen/dimen_28" />

        <ImageView
            android:id="@+id/iv_countdown_goview"
            android:layout_width="@dimen/dimen_12"
            android:layout_height="@dimen/dimen_22"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_countdown_issue"
            android:layout_marginRight="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_4"
            android:background="@drawable/go_go"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_24" />

        <TextView
            android:id="@+id/tv_countdown_goview"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_32"
            android:layout_below="@+id/tv_countdown_issue"
            android:layout_marginRight="@dimen/dimen_8"
            android:layout_toLeftOf="@id/iv_countdown_goview"
            android:text="view all"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_24" />
    </RelativeLayout>



    <TextView
        android:id="@+id/tv_countdown_shares"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_32"
        android:layout_marginLeft="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_254"
        android:text="Countdown announced"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/dimen_24" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_34"
        android:layout_below="@id/tv_countdown_shares"
        android:layout_marginBottom="@dimen/dimen_12"
        android:layout_marginLeft="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/dimen_26"
            android:layout_height="@dimen/dimen_34"
            android:background="#000000"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_countdown_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/text_white"
                android:textSize="@dimen/dimen_28" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/dimen_26"
            android:layout_height="@dimen/dimen_34"
            android:layout_marginLeft="@dimen/dimen_8"
            android:background="#000000"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_countdown_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/text_white"
                android:textSize="@dimen/dimen_28" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/dimen_6"
            android:layout_height="@dimen/dimen_20"
            android:layout_marginLeft="@dimen/dimen_4">

            <ImageView
                android:layout_width="@dimen/dimen_6"
                android:layout_height="@dimen/dimen_6"
                android:background="@drawable/shape_iv_all_time_blackpoint" />

            <ImageView
                android:layout_width="@dimen/dimen_6"
                android:layout_height="@dimen/dimen_6"
                android:layout_alignParentBottom="true"
                android:background="@drawable/shape_iv_all_time_blackpoint" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/dimen_26"
            android:layout_height="@dimen/dimen_34"
            android:layout_marginLeft="@dimen/dimen_8"
            android:background="#000000"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_countdown_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/text_white"
                android:textSize="@dimen/dimen_28" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/dimen_26"
            android:layout_height="@dimen/dimen_34"
            android:layout_marginLeft="@dimen/dimen_8"
            android:background="#000000"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_countdown_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/text_white"
                android:textSize="@dimen/dimen_28" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/dimen_6"
            android:layout_height="@dimen/dimen_20"
            android:layout_marginLeft="@dimen/dimen_8">

            <ImageView
                android:layout_width="@dimen/dimen_6"
                android:layout_height="@dimen/dimen_6"
                android:background="@drawable/shape_iv_all_time_blackpoint" />

            <ImageView
                android:layout_width="@dimen/dimen_6"
                android:layout_height="@dimen/dimen_6"
                android:layout_alignParentBottom="true"
                android:background="@drawable/shape_iv_all_time_blackpoint" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/dimen_26"
            android:layout_height="@dimen/dimen_34"
            android:layout_marginLeft="@dimen/dimen_8"
            android:background="#000000"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_countdown_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/text_white"
                android:textSize="@dimen/dimen_28" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/dimen_26"
            android:layout_height="@dimen/dimen_34"
            android:layout_marginLeft="@dimen/dimen_8"
            android:background="#000000"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_countdown_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/text_white"
                android:textSize="@dimen/dimen_28" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_countdown_continue"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_48"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_265"
        android:background="#ff311a"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_3"
            android:paddingRight="@dimen/dimen_3"
            android:text="Participate again"
            android:textColor="@color/text_white"
            android:textSize="@dimen/dimen_28" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rl_top"
        android:layout_marginLeft="@dimen/dimen_24"
        android:layout_marginRight="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_40"
        android:background="@color/bg_view"></View>
</RelativeLayout>