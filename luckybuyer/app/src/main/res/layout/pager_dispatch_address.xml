<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#F5F5F6"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_dispatch_address"
        android:layout_width="@dimen/dimen_9"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginBottom="@dimen/dimen_15"
        android:background="@drawable/dispatch_address"
        android:layout_marginLeft="@dimen/dimen_12"
        android:layout_height="@dimen/dimen_13" />

    <TextView
        android:layout_width="wrap_content"
        android:textSize="@dimen/dimen_13"
        android:textColor="@color/text_black"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_dispatch_address"
        android:layout_marginLeft="@dimen/dimen_9"
        android:text="Choose a shipping address"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="@dimen/dimen_6"
        android:background="@drawable/go_go"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_12"
        android:layout_height="@dimen/dimen_11" />
</RelativeLayout>