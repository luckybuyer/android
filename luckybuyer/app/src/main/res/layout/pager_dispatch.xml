<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/rl_dispatch_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_128"
        android:background="@color/bg_while">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_60"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_18"
            android:layout_marginTop="@dimen/dimen_52"
            android:gravity="center"
            android:text="Items confirm"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_36" />

        <TextView
            android:id="@+id/tv_dispatch_share"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_40"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_24"
            android:layout_marginRight="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_66"
            android:gravity="center"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_28" />

        <ImageView
            android:id="@+id/iv_dispatchs_back"
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_36"
            android:layout_marginBottom="@dimen/dimen_24"
            android:layout_marginLeft="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_66"
            android:background="@drawable/go_back" />

        <TextView
            android:id="@+id/tv_dispatch_back"
            android:layout_width="@dimen/dimen_78"
            android:layout_height="@dimen/dimen_32"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_66"
            android:layout_toRightOf="@+id/iv_dispatchs_back"
            android:text="Back"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_28" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_alignParentBottom="true"
            android:background="@drawable/default_shadow_top"></ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_dispatch_icon"
        android:layout_width="@dimen/dimen_140"
        android:layout_height="@dimen/dimen_140"
        android:layout_below="@+id/rl_dispatch_header"
        android:layout_marginLeft="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_34"
        android:background="@drawable/shape_rl_all">

        <ImageView
            android:id="@+id/iv_dispatch_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/default_icon" />
    </RelativeLayout>

    <net.iwantbuyer.view.JustifyTextView
        android:id="@+id/jtv_dispatch_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_dispatch_header"
        android:layout_marginLeft="@dimen/dimen_28"
        android:layout_marginRight="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_34"
        android:layout_toRightOf="@+id/rl_dispatch_icon"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Magic sound headphones second generation"
        android:textColor="@color/text_black"
        android:textSize="@dimen/dimen_26" />

    <TextView
        android:id="@+id/tv_issue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jtv_dispatch_title"
        android:layout_marginLeft="@dimen/dimen_28"
        android:layout_marginTop="@dimen/dimen_6"
        android:layout_toRightOf="@+id/rl_dispatch_icon"
        android:text="Issue: "
        android:textColor="#666666"
        android:textSize="@dimen/dimen_26" />
    <TextView
        android:id="@+id/tv_dispatch_issue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jtv_dispatch_title"
        android:layout_marginRight="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_6"
        android:layout_toRightOf="@+id/tv_issue"
        android:text="1234"
        android:textColor="#666666"
        android:textSize="@dimen/dimen_26" />

    <TextView
        android:id="@+id/tv_participate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_issue"
        android:layout_marginLeft="@dimen/dimen_28"
        android:layout_marginTop="@dimen/dimen_6"
        android:layout_toRightOf="@+id/rl_dispatch_icon"
        android:text="I participation: "
        android:textColor="#666666"
        android:textSize="@dimen/dimen_26" />

    <TextView
        android:id="@+id/tv_dispatch_participate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_issue"
        android:layout_marginRight="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_6"
        android:layout_toRightOf="@+id/tv_participate"
        android:text="1"
        android:textColor="#666666"
        android:textSize="@dimen/dimen_26" />

    <TextView
        android:id="@+id/tv_dispatch_adddiscribe"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80"
        android:layout_below="@id/rl_dispatch_icon"
        android:layout_marginTop="@dimen/dimen_36"
        android:background="#F2F2F4"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen_24"
        android:text="Please confirm shipping address"
        android:textColor="#999999"
        android:textSize="@dimen/dimen_26" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dispatch_adddiscribe"
        android:layout_marginLeft="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_36"
        android:text="Order tracking"
        android:textColor="@color/text_black"
        android:textSize="@dimen/dimen_26" />

    <!-- 获得产品描述-->
    <RelativeLayout
        android:id="@+id/rl_dispatch1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100"
        android:layout_below="@id/tv_dispatch_adddiscribe"
        android:layout_marginTop="@dimen/dimen_106">

        <ImageView
            android:id="@+id/tv_disaptch_timepoint1"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:layout_marginLeft="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_8"
            android:background="@drawable/dispatch_black" />

        <TextView
            android:id="@+id/tv_dispatch_discribe1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_36"
            android:layout_marginLeft="@dimen/dimen_18"
            android:layout_toRightOf="@+id/tv_disaptch_timepoint1"
            android:gravity="center_horizontal"
            android:text="Congratulations! You won this product"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_26" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_36"
            android:layout_below="@+id/tv_dispatch_discribe1"
            android:layout_marginLeft="@dimen/dimen_18"
            android:layout_toRightOf="@+id/tv_disaptch_timepoint1"
            android:gravity="center_horizontal"
            android:text="6-07-13 16:02"
            android:textColor="#999999"
            android:textSize="@dimen/dimen_24" />


        <View
            android:layout_width="1px"
            android:layout_height="@dimen/dimen_80"
            android:layout_marginLeft="@dimen/dimen_36"
            android:layout_marginTop="@dimen/dimen_20"
            android:background="#333333"></View>
    </RelativeLayout>

    <!-- 地址-->
    <RelativeLayout
        android:id="@+id/rl_dispatch_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_dispatch1"
        android:layout_marginTop="-5dp">

        <ImageView
            android:id="@+id/iv_disaptch_selector_address"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:layout_marginLeft="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_8"
            android:background="@drawable/selector_dispatch_point" />

        <TextView
            android:id="@+id/tv_disaptch_selector_address"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_36"
            android:layout_marginLeft="@dimen/dimen_18"
            android:layout_toRightOf="@+id/iv_disaptch_selector_address"
            android:enabled="true"
            android:gravity="center_horizontal"
            android:text="Confirm shipping address"
            android:textColor="@drawable/selector_dispatch_textcoclor"
            android:textSize="@dimen/dimen_26" />

        <RelativeLayout
            android:id="@+id/rl_dispatch_address_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_disaptch_selector_address"
            android:layout_marginLeft="@dimen/dimen_18"
            android:layout_marginRight="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_toRightOf="@+id/iv_disaptch_selector_address">

        </RelativeLayout>

        <View
            android:id="@+id/view_address"
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_36"
            android:layout_marginTop="@dimen/dimen_20"
            android:background="@drawable/selector_dispatch_view"></View>
    </RelativeLayout>

    <!-- shipping-->
    <RelativeLayout
        android:id="@+id/rl_dispatch_shipping"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100"
        android:layout_below="@id/rl_dispatch_address"
        android:layout_marginTop="-5dp">

        <ImageView
            android:id="@+id/iv_disaptch_shipping"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:layout_marginLeft="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_8"
            android:background="@drawable/dispatch_gray" />

        <TextView
            android:id="@+id/tv_dispatch_shipping"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_36"
            android:layout_marginLeft="@dimen/dimen_18"
            android:layout_toRightOf="@+id/iv_disaptch_shipping"
            android:gravity="center_horizontal"
            android:text="Waiting for shippment"
            android:textColor="#cccccc"
            android:textSize="@dimen/dimen_26" />


        <View
            android:id="@+id/view_shipping"
            android:layout_width="1px"
            android:layout_height="@dimen/dimen_80"
            android:layout_marginLeft="@dimen/dimen_36"
            android:layout_marginTop="@dimen/dimen_20"
            android:background="#cccccc"></View>
    </RelativeLayout>
    <!-- delivered-->
    <RelativeLayout
        android:id="@+id/rl_delivered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_dispatch_shipping"
        android:layout_marginBottom="@dimen/dimen_40"
        android:layout_marginTop="-5dp">

        <ImageView
            android:id="@+id/iv_disaptch_delivered"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:layout_marginLeft="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_8"
            android:background="@drawable/dispatch_gray" />

        <TextView
            android:id="@+id/tv_dispatch_delivered"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_36"
            android:layout_marginLeft="@dimen/dimen_18"
            android:layout_toRightOf="@+id/iv_disaptch_delivered"
            android:gravity="center_horizontal"
            android:text="Confirm delivery"
            android:textColor="#cccccc"
            android:textSize="@dimen/dimen_26" />
    </RelativeLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_dispatch_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/rl_delivered"
        android:layout_marginRight="@dimen/dimen_24"
        android:background="@color/bg_ff4f3c"
        android:paddingBottom="@dimen/dimen_8"
        android:paddingLeft="@dimen/dimen_20"
        android:paddingRight="@dimen/dimen_20"
        android:paddingTop="@dimen/dimen_8"
        android:text="Confirm"
        android:textColor="#ffffff"
        android:textSize="@dimen/dimen_30" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_delivered"
        android:background="#F2F2F4"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_dispatch_participate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_88"
        android:layout_alignParentBottom="true"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tv_dispatch_again"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_80"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Participate again"
            android:textColor="#eeff9c05"
            android:textSize="@dimen/dimen_28" />

        <ImageView
            android:layout_width="@dimen/dimen_12"
            android:layout_height="@dimen/dimen_22"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_toRightOf="@+id/tv_dispatch_again"
            android:background="@drawable/go_yellow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_keepout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_home_header"
        android:layout_marginTop="@dimen/dimen_128"
        android:background="@color/f2f2f2"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rl_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ProgressBar
                android:id="@+id/pb_loading"
                android:layout_width="@dimen/dimen_60"
                android:layout_height="@dimen/dimen_60"
                android:indeterminateDrawable="@drawable/shape_loading" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_8"
                android:layout_toRightOf="@+id/pb_loading"
                android:text="Loading..."
                android:textColor="#000000"
                android:textSize="@dimen/dimen_32" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_neterror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_160"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_neterror"
                android:layout_width="@dimen/dimen_400"
                android:layout_height="@dimen/dimen_420"
                android:background="@drawable/default_neterror" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_neterror"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_16"
                android:text="Network connection error"
                android:textColor="#acabb4"
                android:textSize="@dimen/dimen_28" />

            <TextView
                android:id="@+id/tv_net_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_neterror"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_80"
                android:background="@drawable/shape_radius_4pxoragne"
                android:paddingBottom="@dimen/dimen_12"
                android:paddingLeft="@dimen/dimen_24"
                android:paddingRight="@dimen/dimen_24"
                android:paddingTop="@dimen/dimen_12"
                android:text="Retry"
                android:textColor="@color/text_white"
                android:textSize="@dimen/dimen_32" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_nodata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_160"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_nodata"
                android:layout_width="@dimen/dimen_250"
                android:layout_height="@dimen/dimen_300"
                android:layout_marginLeft="@dimen/dimen_40"
                android:background="@drawable/default_nodata" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_nodata"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_16"
                android:text="No previous lottery data"
                android:textColor="#acabb4"
                android:textSize="@dimen/dimen_28" />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>