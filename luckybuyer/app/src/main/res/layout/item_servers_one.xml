<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_country_canada"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/rl_country_header"
    android:layout_marginBottom="@dimen/dimen_20"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:background="#f9f9f9"
        android:layout_height="@dimen/dimen_20"></RelativeLayout>
    <ImageView
        android:layout_below="@+id/rl"
        android:layout_marginTop="@dimen/dimen_32"
        android:layout_marginBottom="@dimen/dimen_32"
        android:id="@+id/iv_country_flag"
        android:layout_width="@dimen/dimen_70"
        android:layout_height="@dimen/dimen_35"
        android:layout_marginStart="@dimen/dimen_24"
        android:background="@drawable/shape_biankuang_black"
        android:padding="0.5px"
        android:scaleType="fitXY"
        android:src="@drawable/canada" />

    <TextView
        android:layout_alignTop="@+id/iv_country_flag"
        android:id="@+id/tv_country"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_35"
        android:layout_marginStart="@dimen/dimen_24"
        android:layout_toRightOf="@+id/iv_country_flag"
        android:text="@string/Canada"
        android:textColor="@color/text_black"
        android:textSize="@dimen/dimen_32" />

    <ImageView
        android:layout_marginTop="@dimen/dimen_60"
        android:id="@+id/iv_country"
        android:layout_width="@dimen/dimen_30"
        android:layout_height="@dimen/dimen_18"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_24"
        android:background="@drawable/buycoins_true"
        android:visibility="invisible" />
    <RelativeLayout
        android:background="#f9f9f9"
        android:layout_marginTop="@dimen/dimen_120"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20"></RelativeLayout>
</RelativeLayout>