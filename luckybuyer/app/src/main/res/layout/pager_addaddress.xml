<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_addaddress_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_39"
        android:background="@color/bg_while">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_30"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_9"
            android:layout_marginTop="@dimen/dimen_1"
            android:gravity="center"
            android:text="Add Address"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_20" />

        <TextView
            android:id="@+id/tv_dispatch_share"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_20"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_12"
            android:layout_marginRight="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_7"
            android:gravity="center"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_14" />

        <ImageView
            android:id="@+id/iv_addaddress_back"
            android:layout_width="@dimen/dimen_10"
            android:layout_height="@dimen/dimen_18"
            android:layout_marginBottom="@dimen/dimen_12"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_8"
            android:background="@drawable/go_back" />

        <TextView
            android:id="@+id/tv_addaddress_back"
            android:layout_width="@dimen/dimen_39"
            android:layout_height="@dimen/dimen_16"
            android:layout_marginLeft="@dimen/dimen_6"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_toRightOf="@+id/iv_addaddress_back"
            android:text="Back"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/bg_view"></View>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_addaddress_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:layout_below="@+id/rl_addaddress_header"
        android:layout_marginTop="@dimen/dimen_12"
        android:background="@color/bg_while">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_12"
            android:text="Full name"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_12" />

        <EditText
            android:id="@+id/et_addaddress_name"
            android:layout_width="@dimen/dimen_140"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_12"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="Please type in you name"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dimen_12"
            android:background="@color/bg_view"></View>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_addaddress_telnum"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:layout_below="@+id/rl_addaddress_name"
        android:background="@color/bg_while">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_12"
            android:text="Cellphone number"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_12" />

        <EditText
            android:id="@+id/et_addaddress_telnum"
            android:layout_width="@dimen/dimen_180"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_12"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="Please enter the phone number"
            android:inputType="number"
            android:maxEms="11"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_12" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_addaddress_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60"
        android:layout_below="@+id/rl_addaddress_telnum"
        android:layout_marginTop="@dimen/dimen_15"
        android:background="@color/bg_while">


        <EditText
            android:id="@+id/et_addaddress_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginRight="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_8"
            android:background="@null"
            android:hint="Please enter full address"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_12" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_addaddress_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:layout_below="@+id/rl_addaddress_detail"
        android:layout_marginLeft="@dimen/dimen_25"
        android:layout_marginRight="@dimen/dimen_25"
        android:layout_marginTop="@dimen/dimen_35"
        android:background="@color/ff9c05"
        android:gravity="center"
        android:text="save"
        android:textColor="#ffffff"
        android:textSize="@dimen/dimen_15" />
</RelativeLayout>