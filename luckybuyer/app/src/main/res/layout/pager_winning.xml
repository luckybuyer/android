<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_winning_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_78"
        android:background="@color/bg_while">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_60"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_18"
            android:layout_marginTop="@dimen/dimen_2"
            android:gravity="center"
            android:text="New Result"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_36" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_2"
            android:layout_marginTop="@dimen/dimen_78"
            android:background="@color/bg_view"></View>
    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_winning"

        android:layout_below="@+id/rl_winning_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_winning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"></android.support.v7.widget.RecyclerView>

    </android.support.v4.widget.SwipeRefreshLayout>
    <RelativeLayout
        android:id="@+id/rl_keepout"
        android:background="@color/f2f2f2"
        android:layout_width="match_parent"
        android:layout_below="@+id/rl_home_header"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_neterror"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_160"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_neterror"
                android:layout_width="@dimen/dimen_400"
                android:background="@drawable/default_neterror"
                android:layout_height="@dimen/dimen_420" />

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_16"
                android:layout_below="@+id/iv_neterror"
                android:textSize="@dimen/dimen_28"
                android:textColor="#acabb4"
                android:text="Network connection error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/bt_net_again"
                android:text="To request data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_nodata"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dimen_240"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="@dimen/dimen_40"
                android:id="@+id/iv_nodata"
                android:layout_width="@dimen/dimen_250"
                android:background="@drawable/default_nodata"
                android:layout_height="@dimen/dimen_300" />

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_16"
                android:layout_below="@+id/iv_nodata"
                android:textSize="@dimen/dimen_28"
                android:textColor="#acabb4"
                android:text="No previous lottery data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>