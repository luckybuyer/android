<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_radius_4px">
        <TextView
            android:id="@+id/tv_editshow_camera"
            android:layout_width="match_parent"
            android:text="Camera"
            android:textSize="@dimen/dimen_32"
            android:gravity="center"
            android:textColor="#0076ff"
            android:layout_height="@dimen/dimen_110" />
        <View
            android:layout_width="match_parent"
            android:background="@color/bg_view"
            android:layout_height="@dimen/dimen_2"></View>
        <TextView
            android:id="@+id/tv_editshow_photo"
            android:layout_width="match_parent"
            android:text="Photo Library"
            android:textSize="@dimen/dimen_32"
            android:gravity="center"
            android:textColor="#0076ff"
            android:layout_height="@dimen/dimen_110" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#00000000"
        android:layout_height="@dimen/dimen_10"></LinearLayout>
    <TextView
        android:id="@+id/tv_editshow_cancel"
        android:layout_width="match_parent"
        android:text="Cancel"
        android:textSize="@dimen/dimen_32"
        android:gravity="center"
        android:textColor="#0076ff"
        android:background="@drawable/shape_radius_4px"
        android:layout_height="@dimen/dimen_110" />
</LinearLayout>