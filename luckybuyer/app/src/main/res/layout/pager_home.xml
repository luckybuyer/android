<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto3d="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_home_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_128"
        android:background="@color/bg_while">

        <ImageView
            android:layout_width="@dimen/dimen_250"
            android:layout_height="@dimen/dimen_30"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_20"
            android:layout_alignParentBottom="true"
            android:background="@drawable/home_luckybuy"
            android:textSize="@dimen/dimen_38" />

        <TextView
            android:id="@+id/tv_home_share"
            android:layout_width="@dimen/dimen_72"
            android:layout_height="@dimen/dimen_42"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_24"
            android:layout_marginRight="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_14"
            android:gravity="center"
            android:textColor="@color/text_black" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@drawable/default_shadow_top"
            android:layout_height="3px" />
    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_home_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_home_header">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_home"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_234"
                    android:background="#ffffff"></android.support.v4.view.ViewPager>

                <LinearLayout
                    android:id="@+id/ll_home_point"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_12"
                    android:layout_alignBottom="@+id/vp_home"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dimen_34"
                    android:gravity="center"
                    android:orientation="horizontal"></LinearLayout>


                <RelativeLayout
                    android:id="@+id/rl_home_marquee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/vp_home"
                    android:background="#ffffff">

                    <View
                        android:id="@+id/view_home"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/dimen_56"
                        android:layout_marginRight="@dimen/dimen_56"
                        android:layout_marginTop="@dimen/dimen_30"
                        android:background="@color/bg_view"></View>

                    <ImageView
                        android:id="@+id/iv_home_broadcast"
                        android:layout_width="@dimen/dimen_32"
                        android:layout_height="@dimen/dimen_32"
                        android:layout_below="@+id/view_home"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/dimen_16"
                        android:layout_marginLeft="@dimen/dimen_50"
                        android:layout_marginTop="@dimen/dimen_30"
                        android:background="@drawable/home_broadcast" />

                    <net.luckybuyer.view.AutoTextHomeView
                        android:id="@+id/atv_home_marquee"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_36"
                        android:layout_below="@+id/view_home"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_16"
                        android:layout_marginRight="@dimen/dimen_80"
                        android:layout_marginTop="@dimen/dimen_30"
                        android:layout_toRightOf="@+id/iv_home_broadcast"
                        android:background="@color/bg_while"
                        android:gravity="center"
                        android:text="iphone plus"
                        android:textColor="@color/ff9c05"
                        auto3d:textSize="@dimen/dimen_10" />

                    <ImageView
                        android:layout_width="@dimen/dimen_12"
                        android:layout_height="@dimen/dimen_24" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_home_products"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_84"
                    android:layout_below="@+id/rl_home_marquee"
                    android:layout_marginTop="@dimen/dimen_28"
                    android:background="#ffffff">

                    <TextView
                        android:id="@+id/tv_home_products"
                        android:layout_width="@dimen/dimen_162"
                        android:layout_height="@dimen/dimen_44"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="PRODUCTS"
                        android:textColor="@color/text_buy"
                        android:textSize="@dimen/dimen_34" />

                    <View
                        android:layout_width="@dimen/dimen_28"
                        android:layout_height="@dimen/dimen_2"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:layout_toRightOf="@id/tv_home_products"
                        android:background="#666666"></View>

                    <View
                        android:layout_width="@dimen/dimen_28"
                        android:layout_height="@dimen/dimen_2"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_20"
                        android:layout_toLeftOf="@id/tv_home_products"
                        android:background="#666666"></View>
                    <View
                        android:layout_width="match_parent"
                        android:background="@color/bg_view"
                        android:layout_alignParentBottom="true"
                        android:layout_height="1px"></View>
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_home_producer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/rl_home_products"></android.support.v7.widget.RecyclerView>
            </RelativeLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_keepout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_home_header"
        android:background="@color/f2f2f2">

        <RelativeLayout
            android:id="@+id/rl_loading"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">
            <ProgressBar
                android:indeterminateDrawable="@drawable/shape_loading"
                android:id="@+id/pb_loading"
                android:layout_width="@dimen/dimen_60"
                android:layout_height="@dimen/dimen_60" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_8"
                android:layout_toRightOf="@+id/pb_loading"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:text="Loading..."
                android:textSize="@dimen/dimen_32"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_neterror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_160"
            >

            <ImageView
                android:id="@+id/iv_neterror"
                android:layout_width="@dimen/dimen_400"
                android:layout_height="@dimen/dimen_420"
                android:background="@drawable/default_neterror" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_neterror"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_16"
                android:text="Network connection error"
                android:textColor="#acabb4"
                android:textSize="@dimen/dimen_28" />

            <TextView
                android:id="@+id/tv_net_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_neterror"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_80"
                android:background="@drawable/shape_radius_4pxoragne"
                android:paddingBottom="@dimen/dimen_12"
                android:paddingLeft="@dimen/dimen_24"
                android:paddingRight="@dimen/dimen_24"
                android:paddingTop="@dimen/dimen_12"
                android:text="Retry"
                android:textColor="@color/text_white"
                android:textSize="@dimen/dimen_32" />
        </RelativeLayout>


        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_nodata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_160">

            <ImageView
                android:id="@+id/iv_nodata"
                android:layout_width="@dimen/dimen_250"
                android:layout_height="@dimen/dimen_300"
                android:layout_marginLeft="@dimen/dimen_40"
                android:background="@drawable/default_nodata" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_nodata"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_16"
                android:text="No previous lottery data"
                android:textColor="#acabb4"
                android:textSize="@dimen/dimen_28" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>