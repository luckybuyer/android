<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto3d="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_home_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_while">

        <TextView
            android:layout_width="@dimen/dimen_134"
            android:layout_height="@dimen/dimen_23"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_5"
            android:text="LUCKYBUYER"
            android:textSize="@dimen/dimen_18" />

        <TextView
            android:id="@+id/tv_home_share"
            android:layout_width="@dimen/dimen_36"
            android:layout_height="@dimen/dimen_21"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_12"
            android:layout_marginRight="@dimen/dimen_12"
            android:layout_marginTop="@dimen/dimen_7"
            android:gravity="center"
            android:textColor="@color/text_black" />
    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_home_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_home_header">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_home"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_117"
                    android:background="#ffffff"></android.support.v4.view.ViewPager>

                <LinearLayout
                    android:id="@+id/ll_home_point"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_6"
                    android:layout_alignBottom="@+id/vp_home"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dimen_17"
                    android:gravity="center"
                    android:orientation="horizontal"></LinearLayout>


                <RelativeLayout
                    android:id="@+id/rl_home_marquee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/vp_home"
                    android:background="#ffffff">

                    <View
                        android:id="@+id/view_home"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/dimen_28"
                        android:layout_marginRight="@dimen/dimen_28"
                        android:layout_marginTop="@dimen/dimen_15"
                        android:background="@color/bg_view"></View>

                    <ImageView
                        android:id="@+id/iv_home_broadcast"
                        android:layout_width="@dimen/dimen_16"
                        android:layout_height="@dimen/dimen_16"
                        android:layout_marginTop="@dimen/dimen_15"
                        android:layout_below="@+id/view_home"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/dimen_8"
                        android:layout_marginLeft="@dimen/dimen_25"
                        android:background="@drawable/home_broadcast" />

                    <net.luckybuyer.view.AutoTextView
                        android:layout_marginTop="@dimen/dimen_15"
                        android:layout_below="@+id/view_home"
                        android:id="@+id/atv_home_marquee"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_18"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_8"
                        android:layout_marginRight="@dimen/dimen_30"
                        android:layout_toRightOf="@+id/iv_home_broadcast"
                        android:background="@color/bg_while"
                        android:gravity="center"
                        android:text="iphone plus"
                        android:textColor="@color/text_buy"
                        auto3d:textSize="@dimen/dimen_5" />

                    <ImageView
                        android:layout_width="@dimen/dimen_6"
                        android:layout_height="@dimen/dimen_12" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_home_products"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_42"
                    android:layout_below="@+id/rl_home_marquee"
                    android:layout_marginTop="@dimen/dimen_14"
                    android:background="#ffffff">

                    <TextView
                        android:id="@+id/tv_home_products"
                        android:layout_width="@dimen/dimen_81"
                        android:layout_height="@dimen/dimen_22"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="PRODUCTS"
                        android:textColor="@color/text_buy"
                        android:textSize="@dimen/dimen_16" />

                    <View
                        android:layout_width="@dimen/dimen_14"
                        android:layout_height="@dimen/dimen_1"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:layout_toRightOf="@id/tv_home_products"
                        android:background="#666666"></View>

                    <View
                        android:layout_width="@dimen/dimen_14"
                        android:layout_height="@dimen/dimen_1"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:layout_toLeftOf="@id/tv_home_products"
                        android:background="#666666"></View>
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_home_producer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/rl_home_products"></android.support.v7.widget.RecyclerView>
            </RelativeLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <RelativeLayout
        android:id="@+id/rl_keepout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_home_header"
        android:background="@color/f2f2f2"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rl_neterror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_80"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_neterror"
                android:layout_width="@dimen/dimen_200"
                android:layout_height="@dimen/dimen_210"
                android:background="@drawable/default_neterror" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_neterror"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_8"
                android:text="Network connection error"
                android:textColor="#acabb4"
                android:textSize="@dimen/dimen_14" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_nodata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_80">

            <ImageView
                android:id="@+id/iv_nodata"
                android:layout_width="@dimen/dimen_125"
                android:layout_height="@dimen/dimen_150"
                android:layout_marginLeft="@dimen/dimen_20"
                android:background="@drawable/default_nodata" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_nodata"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_8"
                android:text="No previous lottery data"
                android:textColor="#acabb4"
                android:textSize="@dimen/dimen_14" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>