<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/guide_two"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_guide_close"
        android:layout_width="@dimen/dimen_52"
        android:layout_height="@dimen/dimen_52"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_35"
        android:layout_marginTop="@dimen/dimen_55"
        android:background="@drawable/guide_close" />

    <TextView
        android:id="@+id/tv_guide_getitnow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100"
        android:layout_alignParentBottom="true"
        android:background="@color/all_orange"
        android:gravity="center"
        android:text="@string/GetItNow"
        android:textColor="#ffffff"
        android:textSize="@dimen/dimen_32"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_guide_arrow2"
        android:layout_width="@dimen/dimen_87"
        android:layout_height="@dimen/dimen_79"
        android:layout_above="@+id/tv_guide_getitnow"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_30"
        android:background="@drawable/guide_arrow"
        android:visibility="gone" />

    <!-- 第三个页面-->
    <RelativeLayout
        android:id="@+id/rl_guide_ppw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_44"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_26"
            android:text="@string/selectquantity"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_32" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginEnd="@dimen/dimen_24"
            android:layout_marginStart="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_90"
            android:background="#d8d8d8"></View>

        <RelativeLayout
            android:id="@+id/rl_guide_num"
            android:layout_width="@dimen/dimen_350"
            android:layout_height="@dimen/dimen_88"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_140"
            android:background="#f6f6f7">

            <TextView
                android:id="@+id/tv_guide_count"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50"
                android:layout_centerInParent="true"
                android:background="@null"
                android:gravity="center"
                android:inputType="number"
                android:text="5"
                android:textColor="@color/text_black"
                android:textSize="@dimen/dimen_36"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_guide_delete"
            android:layout_width="@dimen/dimen_88"
            android:layout_height="@dimen/dimen_88"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_140"
            android:layout_toStartOf="@+id/rl_guide_num"
            android:background="#f6f6f7">

            <ImageView
                android:layout_width="@dimen/dimen_36"
                android:layout_height="@dimen/dimen_4"
                android:layout_centerInParent="true"
                android:background="@drawable/icons_delete" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_guide_add"
            android:layout_width="@dimen/dimen_88"
            android:layout_height="@dimen/dimen_88"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_140"
            android:layout_toEndOf="@+id/rl_guide_num"
            android:background="#f6f6f7">

            <ImageView
                android:layout_width="@dimen/dimen_36"
                android:layout_height="@dimen/dimen_36"
                android:layout_centerInParent="true"
                android:background="@drawable/icons_add" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_guide_warn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_guide_num"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_20">

            <ImageView
                android:id="@+id/iv_guide_warn"
                android:layout_width="@dimen/dimen_25"
                android:layout_height="@dimen/dimen_25"
                android:layout_marginEnd="@dimen/dimen_6"
                android:layout_marginTop="@dimen/dimen_4"
                android:background="@drawable/default_warn"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_guide_warn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_guide_warn"
                android:enabled="false"
                android:text="Quantity of purchased items must be a multiple of 5"
                android:textColor="@drawable/selector_ff0000_999999"
                android:textSize="@dimen/dimen_23" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_guide_selector"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_64"
            android:layout_alignEnd="@id/rl_guide_add"
            android:layout_alignStart="@+id/rl_guide_delete"
            android:layout_below="@+id/rl_guide_warn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_guide_two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/selector_tv_insert"
                android:gravity="center"
                android:text="10"
                android:textColor="@drawable/selector_tc_insert_textcolor"
                android:textSize="@dimen/dimen_28" />

            <TextView
                android:id="@+id/tv_guide_five"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimen_20"
                android:layout_weight="3"
                android:background="@drawable/selector_tv_insert"
                android:gravity="center"
                android:text="15"
                android:textColor="@drawable/selector_tc_insert_textcolor"
                android:textSize="@dimen/dimen_28" />

            <TextView
                android:id="@+id/tv_guide_ten"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimen_20"
                android:layout_weight="3"
                android:background="@drawable/selector_tv_insert"
                android:gravity="center"
                android:text="20"
                android:textColor="@drawable/selector_tc_insert_textcolor"
                android:textSize="@dimen/dimen_28" />

            <TextView
                android:id="@+id/tv_guide_all"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimen_20"
                android:layout_weight="4"
                android:background="@drawable/selector_tv_insert"
                android:gravity="center"
                android:text="@string/allremain"
                android:textColor="@drawable/selector_tc_insert_textcolor"
                android:textSize="@dimen/dimen_28" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_guide_buy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100"
            android:layout_below="@+id/ll_guide_selector"
            android:layout_marginBottom="@dimen/dimen_50"
            android:layout_marginEnd="@dimen/dimen_24"
            android:layout_marginStart="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_50"
            android:background="@color/all_orange"
            android:gravity="center"
            android:text="Total 5 coins"
            android:textColor="@color/text_white"
            android:textSize="@dimen/dimen_32" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_guide_morebuy"
        android:layout_width="@dimen/dimen_620"
        android:layout_height="@dimen/dimen_130"
        android:layout_above="@+id/rl_guide_ppw"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_140"
        android:background="@drawable/guide_morebuy"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_guide_arrow3"
        android:layout_width="@dimen/dimen_87"
        android:layout_height="@dimen/dimen_79"
        android:layout_above="@+id/rl_guide_ppw"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_30"
        android:background="@drawable/guide_arrow"
        android:visibility="gone" />

    <!--第4个页面-->
    <RelativeLayout
        android:id="@+id/rl_guide_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_320">

        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/iv_guide"
            android:layout_width="@dimen/dimen_550"
            android:layout_height="@dimen/dimen_314"
            android:background="@drawable/guide_ppw" />



        <ImageView
            android:id="@+id/iv_guide_arrow4"
            android:layout_width="@dimen/dimen_87"
            android:layout_height="@dimen/dimen_79"
            android:layout_below="@+id/iv_guide"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_30"
            android:background="@drawable/guide_arrow" />


        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/iv_guide_login"
            android:layout_width="@dimen/dimen_360"
            android:layout_height="@dimen/dimen_90"
            android:layout_below="@+id/iv_guide_arrow4"
            android:layout_marginTop="@dimen/dimen_30"
            android:background="@drawable/guide_login" />

        <ImageView
            android:layout_marginTop="@dimen/dimen_18"
            android:layout_below="@+id/iv_guide_login"
            android:id="@+id/iv_guide_nologin"
            android:layout_width="@dimen/dimen_360"
            android:layout_height="@dimen/dimen_90"
            android:layout_centerHorizontal="true"
            android:background="@drawable/guide_nologin" />
    </RelativeLayout>
</RelativeLayout>